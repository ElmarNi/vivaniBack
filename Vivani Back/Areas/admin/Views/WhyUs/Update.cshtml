@model WhyChooseUs
<style>
    form span{
        font-size: 14px;
        color: red;
    }
</style>
<section>
    <div class="container">
        <form method="post" class="row">
            <div class="col-12" asp-validation-summary="ModelOnly"></div>
            <div class="col-md-4">
                <label>Başlıq</label>
                <input asp-for="@Model.Heading" class="w-100" />
                <span asp-validation-for="@Model.Heading"></span>
            </div>
            <div class="col-md-4">
                <label>Məzmun</label>
                <input asp-for="@Model.Content" class="w-100" />
                <span asp-validation-for="@Model.Content"></span>
            </div>
            <div class="col-md-4">
                <label>İkon</label>
                <input asp-for="@Model.Icon" class="w-100" />
                <span asp-validation-for="@Model.Icon"></span>
            </div>
            <div class="col-12 mt-4">
                <input type="submit" value="Yadda saxla" class="btn btn bg-success text-white" />
            </div>
        </form>
    </div>
</section>
@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}