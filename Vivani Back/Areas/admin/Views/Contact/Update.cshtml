@model Contact
<style>
    form span {
        font-size: 14px;
        color: red;
    }
    label{
        margin: 0;
    }
    ul{
        color: red
    }
</style>
<section>
    <div class="container">
        <form method="post" class="row" enctype="multipart/form-data">
            <div class="col-12 text-center mb-3">
                <img src="~/img/@Model.ImageUrl" class="img-fluid" />
            </div>
            <div class="col-12 mb-3" asp-validation-summary="ModelOnly"></div>
            <div class="col-12 mb-3">
                <label>Şəkil</label>
                <input asp-for="Image" class="w-100" />
            </div>
            <div class="col-md-6 mb-3">
                <label>Əsas başlıq</label>
                <input asp-for="MainHeader" class="w-100" />
                <span asp-validation-for="MainHeader"></span>
            </div>            
            <div class="col-md-6 mb-3">
                <label>Kiçik başlıq</label>
                <input asp-for="SmallHeader" class="w-100" />
                <span asp-validation-for="SmallHeader"></span>
            </div>
            <div class="col-md-3 mb-3">
                <label>Ünvan</label>
                <input asp-for="Adress" class="w-100" />
                <span asp-validation-for="Adress"></span>
            </div>
            <div class="col-md-3 mb-3">
                <label>Əlaqə nömrəsi</label>
                <input asp-for="PhoneNumber" class="w-100" />
                <span asp-validation-for="PhoneNumber"></span>
            </div>
            <div class="col-md-3 mb-3">
                <label>Email</label>
                <input asp-for="Email" class="w-100" />
                <span asp-validation-for="Email"></span>
            </div>
            <div class="col-md-3 mb-3">
                <label>İş saatları</label>
                <input asp-for="Hours" class="w-100" />
                <span asp-validation-for="Hours"></span>
            </div>
            <div class="col-12">
                <input type="submit" value="Yadda saxla" class="btn btn bg-success text-white" />
            </div>
        </form>
    </div>
</section>
@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}