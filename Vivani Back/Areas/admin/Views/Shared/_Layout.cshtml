<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>Vivani Admin</title>

    <!-- Custom fonts for this template-->
    <script src="https://kit.fontawesome.com/c8f4343e87.js" crossorigin="anonymous"></script>
    <link href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i"
          rel="stylesheet">
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="~/lib/bootstrap/bootstrap.min.css">

    <!-- Custom styles for this template-->
    <link href="~/admin/css/sb-admin-2.css" rel="stylesheet">

</head>

<body id="page-top">

    <!-- Page Wrapper -->
    <div id="wrapper">

        <!-- Sidebar -->
        <ul class="navbar-nav bg-gradient-primary sidebar sidebar-dark accordion" id="accordionSidebar">

            <!-- Sidebar - Brand -->
            <a class="sidebar-brand d-flex align-items-center justify-content-center" asp-area="admin" asp-controller="dashboard">
                <div class="sidebar-brand-icon rotate-n-15">
                    <i class="fas fa-laugh-wink"></i>
                </div>
                <div class="sidebar-brand-text mx-3">Vivani Admin</div>
            </a>

            <!-- Divider -->
            <hr class="sidebar-divider my-0">

            <!-- Nav Item - Dashboard -->
            <li class="nav-item active">
                <a class="nav-link" asp-area="admin" asp-controller="dashboard" asp-action="index">
                    <i class="fas fa-fw fa-tachometer-alt"></i>
                    <span>Dashboard</span>
                </a>
                <a class="nav-link" asp-area="admin" asp-controller="about" asp-action="index">
                    <i class="fa-solid fa-pager"></i>
                    <span>Haqqımızda</span>
                </a>
                <a class="nav-link" asp-area="admin" asp-controller="whyus" asp-action="index">
                    <i class="fas fa-question"></i>
                    <span>Niyə biz ?</span>
                </a>
                <a class="nav-link" asp-area="admin" asp-controller="contact" asp-action="index">
                    <i class="fas fa-info-circle"></i>
                    <span>Əlaqə məlumatları</span>
                </a>
            </li>

            <!-- Divider -->
            <hr class="sidebar-divider d-none d-md-block">

            <!-- Sidebar Toggler (Sidebar) -->
            <div class="text-center d-none d-md-inline">
                <button class="rounded-circle border-0" id="sidebarToggle"></button>
            </div>

        </ul>
        <!-- End of Sidebar -->
        <!-- Content Wrapper -->
        <div id="content-wrapper" class="d-flex flex-column">

            <!-- Main Content -->
            <div id="content">

                <!-- Topbar -->
                <nav class="navbar navbar-expand navbar-light bg-white topbar static-top shadow d-flex justify-content-between align-items-center">

                    <!-- Sidebar Toggle (Topbar) -->
                    <button id="sidebarToggleTop" class="btn btn-link rounded-circle mr-3">
                        <i class="fa fa-bars"></i>
                    </button>
                    <p class="m-0 d-none d-md-block">Vivani Admin panelə xoş gəlmisiniz</p>
                    <p class="m-0"><a class="mr-3" asp-area="admin" asp-controller="account" asp-action="changepassword">Parolu Dəyiş</a> <a asp-controller="account" asp-action="logout">Çıxış</a></p>

                </nav>
                <!-- End of Topbar -->
                <!-- Begin Page Content -->
                @RenderBody()
                <!-- /.container-fluid -->

            </div>
            <!-- End of Main Content -->
            <!-- Footer -->
            <footer class="sticky-footer bg-white">
                <div class="container my-auto">
                    <div class="copyright text-center my-auto">
                        <span>Copyright &copy; Vivani 2020</span>
                    </div>
                </div>
            </footer>
            <!-- End of Footer -->

        </div>
        <!-- End of Content Wrapper -->

    </div>
    <!-- End of Page Wrapper -->
    <!-- Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <script src="~/lib/jquery/jquery-3.5.1.min.js"></script>
    <script src="~/lib/jquery/popper.min.js"></script>
    <script src="~/lib/bootstrap/bootstrap.min.js"></script>
    <!-- Mine js -->
    <script src="~/admin/js/sb-admin-2.js"></script>
    @RenderSection("Scripts", required: false)

</body>

</html>