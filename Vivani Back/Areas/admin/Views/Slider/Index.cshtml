@model IEnumerable<HomeSlider>

<section id="homeSliderAdminIndex">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <h1 class="text-center mb-5">Slayder</h1>
                <a class="btn btn-success d-block mb-3" asp-action="Create">Əlavə et</a>
                <div class="col-12 text-center">
                    <h3 class="textSuccess"></h3>
                </div>
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead class="thead-dark">
                            <tr>
                                <th scope="col">#</th>
                                <th scope="col">Şəkil</th>
                                <th scope="col">Kişik Başlıq</th>
                                <th scope="col">Böyük Başlıq</th>
                                <th scope="col"></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr data-id="@item.Id">
                                    <th scope="row">@item.Id</th>
                                    <td><img width="200" src="/img/@item.ImageUrl" /></td>
                                    <td>@item.LittleHeader</td>
                                    <td>@item.LargeHeader</td>
                                    <td>
                                        <a class="btn btn-warning d-block" asp-action="update" asp-route-id="@item.Id">Yenilə</a>
                                        <a class="btn btn-danger d-block mt-2 openConfirmationModal" href="#" data-id="@item.Id" data-toggle="modal" data-target="#confirmationModal">Sil</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
    <div class="modal fade" id="confirmationModal" tabindex="-1" aria-labelledby="confirmationModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <img src="" class="img-fluid" />
                    Seçilmiş slayderi silməyə əminsiniz ?
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary deleteSlider" data-dismiss="modal">Hə</button>
                    <button type="button" class="btn btn-primary" data-dismiss="modal">Yox</button>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts{
    <script src="~/admin/js/deleteSliderFetch.js" type="module"></script>
}