@model HomeVm
<section id="slider">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12 p-0">
                <div class="owl-carousel">
                    @foreach (var item in Model.homeSliders)
                    {
                        <div class="custom-item" style="background-image: url(../../img/@item.ImageUrl);">
                            <div class="content">
                                <p>@item.LittleHeader</p>
                                <h1>@item.LargeHeader</h1>
                                <a href="" class="sliderB mainBtn">
                                    Shop Now
                                </a>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</section>

<section id="whyChooseUs" style="padding: 0">
    <div class="container">
        <div class="row">
            @foreach (var item in Model.whyChooseUs)
            {
                <div class='col-md-4 py-2'>
                    <div class="item align-items-center">
                        <div class="left mr-4">
                            <img src="img/@item.IconUrl" />
                            <img src="img/@item.IconUrl" />
                        </div>
                        <div class="right">
                            <div class="heading">
                                @Html.Raw(item.Heading)
                            </div>
                            <div class="content">
                                @Html.Raw(item.Content)
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>

<section id="trending">
    <div class="container">
        <div class="row heading">
            <div class="col-12">
                <h1>Ən çox satılan məhsullar</h1>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-4 d-none d-lg-block">
                <div class="banner">
                    <img src="img/product-bnr.jpg" class="img-fluid">
                </div>
            </div>
            <div class="col-lg-8 col-12 products">
                <div class="row">
                    @foreach (var product in Model.bestSellerProducts)
                    {
                        <div class="col-sm-6 col-md-4">
                            <div class="item">
                                <div class="image-wrapper mb-3">
                                    <div class="isNew @(product.IsNew ? "" : "d-none")">
                                        Yeni
                                    </div>
                                    <div class="discount @(product.DiscountPercent != 0 ? "" : "d-none")">
                                        @product.DiscountPercent %
                                    </div>
                                    <a asp-controller="products" asp-action="detail" asp-route-id="@product.Id" class="d-block text-center">
                                        <img src="img/@product.MainImageUrl" class="img-fluid object-fit-contain">
                                    </a>
                                    <a href="" class="mainBtn">Daha ətraflı</a>
                                </div>
                                <div class="content">
                                    <a asp-controller="products" asp-action="detail" asp-route-id="@product.Id">
                                        <h1>@product.Name</h1>
                                    </a>
                                    <p class="price d-flex justify-content-between">
                                        @product.Price AZN
                                        <span class="old-price @(product.DiscountPercent != 0 ? "" : "d-none")">@(product.Price - (product.Price * product.DiscountPercent / 100)) AZN</span>
                                    </p>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</section>

<section id="popular-products">
    <div class="container">
        <div class="row heading">
            <div class="col-12">
                <h1>Seçilmiş məhsullar</h1>
                <p>
                    Əl işi ilə işləmiş üzüklər, sırğalar, qolbaqlar və boyunbağıların ən yeni kolleksiyalarından
                    seçilmiş məhsullar.
                </p>
            </div>
        </div>
        <div class="row mb-2 mb-md-5">
            <div class="col-12 categories text-center">
                <ul class="d-flex justify-content-center flex-wrap">
                    @for (int i = 0; i < Model.trendingProducts.Count(); i++)
                    {
                        <li>
                            <a href="#" data-id="@Model.trendingProducts.ElementAtOrDefault(i).ProductCategoryId" class="@(i == 0 ? "active" : "")">@Model.trendingProducts.ElementAtOrDefault(i).ProductCategory.Name</a>
                        </li>
                    }
                </ul>
            </div>
        </div>

        @for (int i = 0; i < Model.trendingProducts.Count(); i++)
        {
            <div class="row content m-0 @(i == 0 ? "active" : "")" style="@(i != 0 ? "display:none" : "")" data-id="@Model.trendingProducts.ElementAtOrDefault(i).ProductCategoryId">
                <div class="col-lg-6 left-side p-0">
                    <a asp-controller="products" asp-action="detail" asp-route-id="@Model.trendingProducts.ElementAtOrDefault(i).Id">
                        <img src="img/@Model.trendingProducts.ElementAtOrDefault(i).MainImageUrl" width="100%" height="100%" alt="">
                    </a>
                </div>
                <div class="col-lg-6 right-side d-flex align-items-center p-0">
                    <div class="info">
                        <h1>@Model.trendingProducts.ElementAtOrDefault(i).Name</h1>
                        @Html.Raw(Model.trendingProducts.ElementAtOrDefault(i).Description)
                        <a class="mainBtn" asp-controller="products" asp-action="detail" asp-route-id="@Model.trendingProducts.ElementAtOrDefault(i).Id">Daha ətraflı</a>
                    </div>
                </div>
            </div>
        }

    </div>
</section>

