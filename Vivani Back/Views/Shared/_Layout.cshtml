                                </ul>
                            </div>
                            <div class="col-md-6 adress text-center py-4 align-self-center">
                                <ul>
                                    <li>
                                        <i class="fas fa-map-marker-alt"></i>
                                        4005, Silver Business Point India
                                    </li>
                                    <li>
                                        <i class="fas fa-phone-alt"></i>
                                        <a href="tel:+994000000000">+994(50)-555-55-55</a>
                                    </li>
                                    <li>
                                        <i class="fas fa-envelope"></i>
                                        <a href="">office@jeweller.com</a>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row copy">
                <div class="col-12">
                    © 2020, Vivani Jewellery
                </div>
                <div class="col-6"></div>
            </div>
        </div>
    </footer>
    <!-- Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <script src="lib/jquery/jquery-3.5.1.min.js"></script>
    <script src="lib/jquery/popper.min.js"></script>
    <script src="lib/bootstrap/bootstrap.min.js"></script>
    <!-- owlCarousel -->
    <script src="owlCarousel/owl.carousel.min.js"></script>
    <!-- Mine js -->
    <script src="js/main.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
